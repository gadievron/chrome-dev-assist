{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true,
    "webextensions": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "chrome": "readonly",
    "importScripts": "readonly",
    "ConsoleCapture": "readonly",
    "fail": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "no-empty": "warn",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "brace-style": ["warn", "1tbs"],
    "prefer-const": "warn",
    "no-var": "error"
  },
  "ignorePatterns": ["node_modules/", "coverage/", "dist/", "build/", "*.min.js"]
}
