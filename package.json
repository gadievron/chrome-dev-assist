{
  "name": "chrome-dev-assist",
  "version": "1.0.0",
  "description": "Automated testing tool for Chrome extension development with Claude Code integration",
  "main": "claude-code/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "validate:syntax": "node scripts/validate-extension-syntax.js",
    "validate:health": "node scripts/check-extension-health.js",
    "validate:all": "bash scripts/pre-commit-validation.sh",
    "precommit": "npm run validate:all",
    "prepare": "husky install || true"
  },
  "keywords": [
    "chrome-extension",
    "testing",
    "automation",
    "websocket",
    "development-tools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/chrome-dev-assist"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "claude-code/**/*.js",
      "server/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  }
}
